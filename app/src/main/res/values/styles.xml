<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="labels">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="hyperlinks">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorLinks</item>
    </style>

    <style name="errorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorError</item>
    </style>
    <style name="navBottomBar">
        <item name="android:navigationBarColor">@color/colorNavBarBackground</item>
    </style>
    <style name="searchStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
</resources>
